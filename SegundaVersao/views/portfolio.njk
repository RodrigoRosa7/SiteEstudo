{% extends "layout.njk" %}

{% block head %}
  <title>Portfolio - Rodrigo</title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
{% endblock %}

{% block content %}

  <div id="wrapper">
    <h1>Projetos</h1>
  </div>

  <section class="cards">

    {% for item in items %}
    <div class="card" id="{{item.id}}">
      <div class="card__image-container">
        <img src="assets/siteProprio.png" alt="Imagem de {{item.title}}">
      </div>

      <div class="card__content">
        <p>{{item.title}}</p>
      </div>

      <div class="card__info">
        <p>{{item.duration}}</p>
        <p class="card__price">{{item.price}}</p>
      </div>
    </div>
    {% endfor %}
    
  </section>

  <div class="modal-overlay">
    <div class="modal">
      <a class="close-modal">
        <span class="material-icons">
          close
        </span>
      </a>

      <div class="modal-content">
        <iframe src="" frameborder="0"></iframe>
      </div>
    </div>
  </div>

  
  <div id="links-footer" class="links">
    <a href="https://github.com/RodrigoRosa7" target="_blank"><img src="assets/github.png" alt="Github"></a>
    <a href="https://github.com/RodrigoRosa7" target="_blank">Github</a>
  </div>

  <script src="scripts.js"></script>
  
{% endblock %}